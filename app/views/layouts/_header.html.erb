<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("home.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="hvr-overline-from-right"><%= link_to t("home.title"), root_path %></li>
        <li class="hvr-overline-from-right"><%= link_to t("help.title"), help_path %></li>
        <% if logged_in? %>
          <% if current_user.admins? %>
            <li class="hvr-overline-from-right">
              <%= link_to t("user.title"), admin_users_path %>
            </li>
            <li class="hvr-overline-from-right">
              <%= link_to t("productindex.title"), admin_products_path %>
            </li>
            <li class="hvr-overline-from-right">
              <%= link_to t("categoryindex.title"), admin_categories_path %>
            </li>
            <li class="hvr-overline-from-right">
              <%= link_to t("suggestion.title"), admin_suggestions_path %>
            </li>
            <li class="hvr-overline-from-right">
              <%= link_to t("order.order"), admin_orders_path %>
            </li>
          <% else %>
            <li class="hvr-overline-from-right">
              <%= link_to t("user.title"), users_path %>
            </li>
            <li class="hvr-overline-from-right">
              <%= link_to t("productindex.title"), products_path %>
            </li>
            <li class="hvr-overline-from-right">
              <%= link_to t("categoryindex.title"), categories_path %>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "user.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.profile"), current_user %></li>
              <li><%= link_to t("user.setting"), edit_user_path(current_user) %></li>
              <li><%= link_to t("summary.title"), orders_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("user.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <li class="td-cart-icon">
            <%= render "layouts/order_text" %>
          </li>
        <% else %>
          <li class="hvr-overline-from-right"><%= link_to t("login.title"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
